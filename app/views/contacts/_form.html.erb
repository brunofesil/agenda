<%= form_with(model: contact, local: true) do |f| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <h3>Adress</h3>
  <div id='addresses'>
    <%= f.fields_for :address do |address| %>
      <div class="field"%>
        <%= f.label :street %>
        <%= f.text_field :street %>
      </div>
      <div class="field"%>
        <%= f.label :number %>
        <%= f.text_field :number %>
      </div>
      <div class="field"%>
        <%= f.label :neighborhood %>
        <%= f.text_field :neighborhood %>
      </div>
    <% end %>
  </div>

  <h3>Phone</h3>
  <div id='phones'>
    <%= f.fields_for :phones do |phone| %>
      <%= render 'phone_fields', f: phone %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add phone', f, :phones %>
      <br><br>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
  <br>
<% end %>
